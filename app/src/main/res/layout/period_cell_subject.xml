<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/period_cell_bg"
    android:padding="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Subject Color Dot (Top-Start Corner) -->
    <View
        android:id="@+id/view_subject_color"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        android:background="@drawable/subject_color_circle" />

    <!-- Big Text (Subject or Class name) -->
    <TextView
        android:id="@+id/tv_big_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Science"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Small Label Below (Teacher or Subject) -->
    <TextView
        android:id="@+id/tv_small_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Ms. Smith"
        android:textSize="8sp"
        android:textColor="#7F8C8D"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

</RelativeLayout>
