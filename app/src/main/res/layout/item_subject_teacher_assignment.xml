<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginHorizontal="4dp"

        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/primary_red"
        app:strokeWidth="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="12dp">

            <!-- Subject Name -->
            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <!-- Teacher Full Name -->
            <TextView
                android:id="@+id/tvTeacherFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mr. John Doe"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Bottom Row: Username (left), PeriodCount (right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Username -->
                <TextView
                    android:id="@+id/tvTeacherUsername"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="john_doe"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- Period Count -->
                <TextView
                    android:id="@+id/tvPeriodCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Periods: 5"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

